#include <iostream>
using namespace std;
int main()
{
    //C++ Program to insert an Element at any position in Array

        int array[100], size, pos, i, insElem, count = 0;

        cout << "Enter the size of an array (Max size: 100): ";
        cin >> size;

        cout << "Enter array elements:\n";
        for (i = 0; i < size; i++)
            cin >> array[i];

        cout << "\nEnter element to be inserted: ";
        cin >> insElem;

        cout << "Enter the position: "; //position specified
        cin >> pos;

        for (i = size; i >= pos; i--)
            array[i] = array[i - 1];

        array[i] = insElem;

        //Display new array
        cout << "New Array after Insertion:\n";
        for (i = 0; i < (size + 1); i++)
            cout << array[i] << " ";

        return 0;
    }

